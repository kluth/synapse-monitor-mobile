# Synapse Monitor - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# API Configuration
SYNAPSE_API_ENDPOINT=wss://your-synapse-backend.com/monitor
SYNAPSE_REST_API=https://your-synapse-backend.com/api

# API Authentication (if required)
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# WebSocket Configuration
WS_RECONNECT_INTERVAL=5000
WS_MAX_RECONNECT_ATTEMPTS=10

# Monitoring Configuration
POLLING_INTERVAL=30000
HEALTH_CHECK_INTERVAL=60000

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true
ENABLE_DEBUG_LOGGING=false

# Firebase Configuration (for push notifications)
# These will be auto-configured by FlutterFire CLI
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_APP_ID=your-app-id
# FIREBASE_API_KEY=your-api-key
# FIREBASE_MESSAGING_SENDER_ID=your-sender-id

# Performance Configuration
MAX_CACHE_SIZE=100
CHART_DATA_POINTS=50
NETWORK_TIMEOUT=30000

# Alert Thresholds
ERROR_RATE_THRESHOLD=10
HEALTH_SCORE_THRESHOLD=70
CONNECTION_POOL_THRESHOLD=80
